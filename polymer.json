{
  "entrypoint": "index.html",
  "shell": "_page/furo-shell.js",
  "fragments": [
    "_page/api/view-api.js",
    "_page/guide/view-guide.js"
  ],
  "sources": [
    "favicon.ico",
    "_assets/**/*",
    "_page/markdown/**/*",
    "_page/images/**/*",
    "_page/assets/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js",
    "node_modules/@furo/**/analysis.json",
    "node_modules/@furo/**/CHANGELOG.md"
  ],
  "builds": [
    {
      "name": "es6-bundled",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "compile": "es2015",
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es6-bundled"
    }
  ],
  "moduleResolution": "node",
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}
