{
    "suites": [
        "node_modules/@furo/framework/test/index.html",
        "node_modules/@furo/fbp/test/index.html",
        "node_modules/@furo/form/test/index.html",
        "node_modules/@furo/route/test/index.html",
        "node_modules/@furo/data/test/index.html",
        "node_modules/@furo/data-ui/test/index.html",
        "node_modules/@furo/util/test/index.html",
        "node_modules/@furo/navigation/test/index.html"
    ],
    "root": "./",
    "npm": true,
    "moduleResolution": "node",
    "verbose": true,
    "plugins": {
        "istanbub": {
            "reporters": ["text-summary", "lcov"],
            "include": [
                "node_modules/@furo/framework/*.js",
                "node_modules/@furo/data/*.js",
                "node_modules/@furo/data-ui/*.js",
                "node_modules/@furo/fbp/*.js",
                "node_modules/@furo/route/*.js",
                "node_modules/@furo/form/*.js",
                "node_modules/@furo/navigation/*.js",
                "node_modules/@furo/util/*.js"
            ],
            "exclude": ["**/furo-catalog.js"]
        },
        "local": {
            "browsers": ["chrome"]
        }
    }

}
