{
  "suites": [
    "packages/furo-data/test/*_test.html",
    "packages/furo-data-input/test/*_test.html",
    "packages/furo-layout/test/*_test.html",
    "packages/furo-fbp/test/*_test.html",
    "packages/furo-config/test/*_test.html",
    "packages/furo-data-util/test/*_test.html",
    "packages/furo-form/test/*_test.html",
    "packages/furo-framework/test/*_test.html",
    "packages/furo-input/test/*_test.html",
    "packages/furo-logic/test/*_test.html",
    "packages/furo-math/test/*_test.html",
    "packages/furo-route/test/*_test.html",
    "packages/furo-data-ui/test/*_test.html",
    "packages/furo-navigation/test/*_test.html",
    "packages/furo-notification/test/*_test.html",
    "packages/furo-config/test/*_test.html",
    "packages/furo-ui-builder/test/*_test.html"
  ],
  "npm": true,
  "moduleResolution": "node",
  "verbose": false,
  "plugins": {
    "istanbub": {
      "reporters": [
        "text-summary",
        "lcov"
      ],
      "include": [
        "packages/furo-fbp/*.js",
        "packages/furo-config/*.js",
        "packages/furo-config/lib/*.js",
        "packages/furo-data/*.js",
        "packages/furo-config/*.js",
        "packages/furo-data/lib/*.js",
        "packages/furo-data-input/lib/*.js",
        "packages/furo-data-input/*.js",
        "packages/furo-data-ui/*.js",
        "packages/furo-data-util/*.js",
        "packages/furo-form/*.js",
        "packages/furo-framework/*.js",
        "packages/furo-input/*.js",
        "packages/furo-layout/*.js",
        "packages/furo-logic/*.js",
        "packages/furo-math/*.js",
        "packages/furo-navigation/*.js",
        "packages/furo-notification/*.js",
        "packages/furo-route/*.js",

        "packages/furo-testhelper/data-ui/*.js",
        "packages/furo-ui-builder/build/ui/**/*.js"
      ],
      "exclude": [
        "**/furo-catalog.js"
      ],
      "thresholds": {
        "global": {
          "statements": 80,
          "branches": 68,
          "functions": 81,
          "lines": 80
        }
      }
    },
    "local": {
      "browsers": [
        "chrome"
      ]
    }
  }
}
